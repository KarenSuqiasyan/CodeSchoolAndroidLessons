    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/contentNewsFragment">

    <fragment
        android:id="@+id/contentNewsFragment"
        android:name="com.example.codeschoolandroidlessons.guardianv2.ui.contentnews.ContentNewsFragment"
        android:label="fragment_contentNews"
        tools:layout="@layout/fragment_guardian_content_news">
        <action
            android:id="@+id/action_contentNewsFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.example.codeschoolandroidlessons.guardianv2.ui.details.DetailsFragment"
        android:label="fragment_details"
        tools:layout="@layout/fragment_details">
        <argument
            app:argType="string" />
