<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/contentImageView"
            android:layout_width="@dimen/_100dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sectionNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:gravity="center"
            android:text="title"
            app:layout_constraintBottom_toTopOf="@id/webTitleTextView"
            app:layout_constraintStart_toEndOf="@id/contentImageView"
            app:layout_constraintTop_toTopOf="@id/contentImageView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/webTitleTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:text="title"
            app:layout_constraintBottom_toBottomOf="@id/contentImageView"
            app:layout_constraintStart_toStartOf="@id/sectionNameTextView"
            app:layout_constraintTop_toBottomOf="@id/sectionNameTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
